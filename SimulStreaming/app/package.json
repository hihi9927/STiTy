{
  "name": "realtime-subtitle",
  "version": "1.1.1",
  "description": "STiTy",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win --x64"
  },
  "author": "SKKAI-Audio-AI",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.subtitle.realtime",
    "productName": "STiTy",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "main.js",
      "index.html",
      "package.json",
      "app.js",
      "styles.css",
      "settings.html",
      "settings.js",
      "settings-styles.css"
    ]
  }
}
